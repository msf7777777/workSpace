package No13_接口2;

import java.util.Scanner;

public class day0814_01 {
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		
		System.out.println("№ 输入_姓名 №");
		String name = s.next();
		
		System.out.println("№ 输入_年龄 №");
		int age = s.nextInt();
		
		System.out.println("№ 输入_性别 №");
		String gender = s.next();
		
		System.out.println("№ 输入_学号 №");
		int sno = s.nextInt();	
		
		s.close();
		
		Person p = new Person(name,age,gender,sno);
		
		System.out.println("----------【】----------");
		System.out.println("大家好！");
		System.out.println("我叫" + p.name);
		System.out.println("我现在" + p.age + "周岁");
		System.out.println("我是一个小" + p.gender + "生");
		System.out.println("我的生日是" + p.sno);
	}	
}
