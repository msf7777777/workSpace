<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--配置当前项目的初始哈参数信息-->
    <context-param>
        <param-name>jiaozhu</param-name>
        <param-value>黄晓明</param-value>
    </context-param>
    <context-param>
        <param-name>zongcai</param-name>
        <param-value>黎明</param-value>
    </context-param>


    <!--在web.xml注册-->
    <servlet>
        <servlet-name>ServletDemo01</servlet-name>
        <servlet-class>cn.itcast.controller.ServletDemo01</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDemo02</servlet-name>
        <servlet-class>cn.itcast.controller.ServletDemo02</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDemo03</servlet-name>
        <servlet-class>cn.itcast.controller.ServletDemo03</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDemo04</servlet-name>
        <servlet-class>cn.itcast.controller.ServletDemo04</servlet-class>
    </servlet>

    <!--映射浏览器访问的路径-->
    <servlet-mapping>
        <servlet-name>ServletDemo01</servlet-name>
        <url-pattern>/ServletDemo01</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDemo02</servlet-name>
        <url-pattern>/ServletDemo02</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDemo03</servlet-name>
        <url-pattern>/ServletDemo03</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDemo04</servlet-name>
        <url-pattern>/ServletDemo04</url-pattern>
    </servlet-mapping>

</web-app>